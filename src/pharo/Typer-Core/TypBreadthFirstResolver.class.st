{ #category : #resolving }
TypBreadthFirstResolver >> resolve: aLookup [

	| resolver |
	self assert: [ self canResolve: aLookup ].
	resolver := resolvers detect: [ :e | e canResolve: aLookup ].
	^ resolver resolve: aLookup
]
